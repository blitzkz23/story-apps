<resources>
    <!-- Base application theme. -->
    <style name="Theme.StoryApps" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dicoding_black</item>
        <item name="colorPrimaryVariant">@color/dicoding_black_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dicoding_teal</item>
        <item name="colorSecondaryVariant">@color/dicoding_teal_variant</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="background">@color/custom_white</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/explode</item>
        <item name="android:windowExitTransition">@android:transition/explode</item>
        <item name="android:windowSharedElementEnterTransition">
            @transition/change_transform</item>
        <item name="android:windowSharedElementExitTransition">
            @transition/change_transform</item>
    </style>

    <!-- SplashScreen Theme -->
    <style name="Theme.StoryApps.App.Starting" parent="Theme.SplashScreen">
        <!-- Splash screen theme -->
        <item name="windowSplashScreenBackground">@color/dicoding_black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/dicoding_logo_variant</item>
        <item name="postSplashScreenTheme">@style/Theme.StoryApps</item>
    </style>

    <!-- TextInput Style -->
    <style name="TextInputLayoutStyle1" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <!-- Font Style -->
    <!-- Base text Style -->
    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dicoding_black</item>
    </style>

    <style name="Text2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="Text.Header1">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:letterSpacing">-0.013</item>
    </style>

    <style name="Text.Header2">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Text.Header3">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:letterSpacing">-0.013</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Header4">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Header5">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.SubHeader1">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">-0.013</item>
        <item name="android:textColor">@color/custom_subtext</item>
    </style>

    <style name="Text.SubHeader2">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.013</item>
        <item name="android:textColor">@color/custom_subtext</item>
    </style>

    <style name="Text.SubText">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">-0.013</item>
        <item name="android:textColor">@color/custom_subtext</item>
    </style>

    <style name="Text.SubText2">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">-0.013</item>
        <item name="android:textColor">@color/custom_subtext</item>
    </style>

    <style name="Text.Link">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">-0.013</item>
        <item name="android:textColor">@color/dicoding_teal</item>
    </style>x

    <style name="Text.Button">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Paragraph">
        <item name="android:textSize">13.5sp</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>
</resources>